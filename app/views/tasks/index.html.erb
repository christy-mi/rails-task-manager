<h1>My tasks</h1>
<% @tasks.each do |task| %>
  <% if task.completed == true %>
    <div class="form-check form-check-inline">
      <input class="form-check-input" type="checkbox" checked id="inlineCheckbox1" value="option1">
      <label class="form-check-label" for="inlineCheckbox1"><%= link_to task.title, task_path(task.id)%></label>
    </div>
    <% else %>
      <div class="form-check form-check-inline">
      <input class="form-check-input" type="checkbox" unchecked id="inlineCheckbox1" value="option1">
      <label class="form-check-label" for="inlineCheckbox1"><%= link_to task.title, task_path(task.id)%></label>
    </div>
  <% end %>
<% end %>

<%= link_to "+ Add a new task", tasks_new_path %>

